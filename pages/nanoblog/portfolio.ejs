    <style>
        /* Rainbow Text */
        .flashy-text {
            font-weight: bold;
            background: linear-gradient(to right, #ef4444, #f59e0b, #10b981, #3b82f6, #6366f1, #8b5cf6, #ef4444);
            background-size: 200% auto;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: rainbow-flow 3s linear infinite;
        }
        @keyframes rainbow-flow { to { background-position: 200% center; } }

        /* Figma CSS Logo */
        .figma-logo-container { display: grid; grid-template-columns: repeat(2, 1fr); width: 18px; height: 27px; gap: 0; }
        .figma-dot { width: 9px; height: 9px; }
        .figma-dot:nth-child(1) { border-radius: 9px 0 0 9px; }
        .figma-dot:nth-child(2) { border-radius: 9px; }
        .figma-dot:nth-child(3) { border-radius: 9px 0 0 9px; }
        .figma-dot:nth-child(4) { border-radius: 9px; }
        .figma-dot:nth-child(5) { border-radius: 9px 0 9px 9px; }

        /* General Animations */
        @keyframes drawFade {
            0% { stroke-dashoffset: 120; opacity: 0; }
            15% { opacity: 1; }
            45% { stroke-dashoffset: 0; opacity: 1; }
            75% { opacity: 1; }
            100% { stroke-dashoffset: -120; opacity: 0; }
        }
        .path-animate {
            stroke-dasharray: 120;
            stroke-dashoffset: 120;
            animation: drawFade 2.5s infinite ease-in-out;
        }
        @keyframes wave {
            0%, 100% { transform: rotate(0deg) }
            20% { transform: rotate(14deg) }
            40% { transform: rotate(-8deg) }
            60% { transform: rotate(14deg) }
            80% { transform: rotate(-4deg) }
        }
        .animate-waving-hand { animation: wave 2.5s infinite; }
    </style>
